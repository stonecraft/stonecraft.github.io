*
	font-family "Avenir", sans-serif
	font-size inherit
	box-sizing border-box

.container
	width 1100px
	margin-left auto
	margin-right auto

	@media screen and (max-width: 1100px)
		width 100%

a, a:hover
	text-decoration none
	color inherit

h1
	margin 0
	text-transform uppercase
	font-weight 300
	font-size 24px
	text-align center

ul
	margin 0
	padding 0
	list-style none

body
	padding-top 174px /* height of #header */

	@media screen and (max-width: 446px), screen and (max-height: 400px)
		padding-top 0