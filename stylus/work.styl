#work
	background-image url('../images/work/work-background.jpg')
	background-size cover
	position relative
	padding-top 80px
	padding-bottom 80px

	.down
		position absolute
		left 50%
		margin-left -25px /* half of arrow image width */
		top -21px

	.container
		h1
			margin 0
			text-transform uppercase
			margin-bottom 40px
			color #e1e1e1

		.gallery
			position relative
			width 80%
			margin-left auto
			margin-right auto

			.images
				ul
					font-size 0

					li
						display none
						padding 25px
						width 33.33333%

						@media screen and (max-width: 680px)
							width 50%
							padding 8px
							display inline-block

						@media screen and (max-width: 450px)
							width 100%

						&.active
							display inline-block

						&:hover
							cursor pointer

						img
							width 100%

			.scroll
				position absolute
				top 50%
				transform translateY(-50%)

				.hover
					display none

				&.next
					right -40px

				&.prev
					left -40px

				&:hover
					cursor pointer

					.arrow
						display none

					.hover
						display block

				@media screen and (max-width: 680px)
					display none !important

#work-show
	position fixed
	width 100%
	height 100%
	top 0
	left 0
	background-color rgba(0,0,0,0.7)
	display none

	&.active
		display block

	.image
		width 60%
		margin-left auto
		margin-right auto
		top 50%
		transform translateY(-50%)
		position relative

		img
			width 100%

		.close
			position absolute
			top 10px
			right 10px
			color black
			background-color rgba(255,255,255,0.7)
			width 30px
			height 30px
			line-height 30px
			font-size 23px
			text-align center
			font-weight 500

			&:hover
				cursor pointer

		@media screen and (max-width: 850px)
			width 80%

		@media screen and (max-width: 500px)
			width 95%